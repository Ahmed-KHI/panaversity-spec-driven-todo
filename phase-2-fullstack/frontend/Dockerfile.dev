FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# Ensure .next directory exists and has correct permissions
RUN mkdir -p /app/.next && chown -R node:node /app

# Switch to node user
USER node

# Expose port
EXPOSE 3000

# Run development server
CMD ["npm", "run", "dev"]
